        <item name="android:listChoiceIndicatorMultiple">@drawable/abc_btn_check_material</item>

        <item name="android:actionModeCutDrawable">?actionModeCutDrawable</item>
        <item name="android:actionModeCopyDrawable">?actionModeCopyDrawable</item>
        <item name="android:actionModePasteDrawable">?actionModePasteDrawable</item>
    </style>
    <style name="PureAndroidPageIndicator" parent="Widget.TabPageIndicator">
        <!-- 点击时在不同状态下显示的背景色 -->
        <item name="android:background">@color/black</item>
        <!-- 分割线图片设置 -->
        <item name="android:divider">@drawable/trans</item>
        <item name="divider">@drawable/trans</item>
         <!--设置分割线的显示位置，或是不显示 -->
        <item name="android:showDividers">none</item>
        <item name="dividerPadding">10dp</item>

        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/selector_tab_text</item>
        <item name="android:textSize">@dimen/text_size_4</item>
        <item name="android:padding">10dp</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>
    <style name="SearchTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/selector_search_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/selector_search_text</item>
        <item name="android:textSize">@dimen/text_size_4</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>
